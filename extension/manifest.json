{
  "name": "Chat Extension",
  "version": "1.9.2",
  "manifest_version": 3,
  "description": "Chat over any site with people there at the same time",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "chat.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*",
    "<all_urls>"
  ]
}